<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:paddingStart="@dimen/listSpaceSize"
        android:paddingEnd="@dimen/listSpaceSize"
        tools:visibility="visible">

        <TextView
            android:id="@+id/tvTitle8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:textSize="22sp"
            tools:text="本周榜单" />

        <TextView
            android:id="@+id/tvRightText8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_toStartOf="@id/ivInto8"
            android:layout_toEndOf="@id/tvTitle8"
            android:gravity="center_vertical|end"
            android:textColor="@color/color_blue"
            android:textSize="14sp"
            tools:text="查看全部" />

        <ImageView
            android:id="@+id/ivInto8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tvRightText8"
            android:layout_alignBottom="@id/tvRightText8"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_into_blue_24dp" />

    </RelativeLayout>
</layout>
